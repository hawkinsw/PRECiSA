le_fp [
  FloatingPointNumber  : TYPE+,
  lt_fp                : (strict_total_order?[FloatingPointNumber])
] : THEORY BEGIN

  x,y: VAR FloatingPointNumber

  IMPORTING orders@le[FloatingPointNumber,lt_fp]

  le_fp(x,y:FloatingPointNumber): bool = le.le(x,y)

  le_fp_def
  : LEMMA
    le_fp(x,y) = (x=y OR lt_fp(x,y))

  le_fp_total_order
  : LEMMA
    total_order?(le_fp)

END le_fp
