le_r [
  RealNumber          : TYPE+,
  lt_r                : (strict_total_order?[RealNumber])
] : THEORY BEGIN

  x,y: VAR RealNumber

  IMPORTING orders@le[RealNumber,lt_r]

  le_r(x,y): bool = le.le(x,y)

  le_r_def
  : LEMMA
    le_r(x,y) = (x=y OR lt_r(x,y))

  le_r_total_order
  : LEMMA
    total_order?(le_r)

END le_r
